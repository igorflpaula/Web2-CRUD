<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/" style="color: black">Lista de Produtos</a></li>
    <li class="breadcrumb-item active" aria-current="page">Editar Produto</li>
  </ol>
</nav>

{{#if err}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        {{alert}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/if}}

{{#if alert}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{alert}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/if}}

{{#each rows}}
    <form action="/editproduto/{{this.id}}" class="row g-3 needs-validation" method="POST" novalidate>
            {{> produto-form}}
    </form>
{{/each}}